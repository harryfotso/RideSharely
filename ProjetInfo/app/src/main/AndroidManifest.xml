<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icone_appli"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icone_appli"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetInfo"
        tools:targetApi="31">
        <activity
            android:name=".DetailsVoitureActivity"
            android:exported="false" />
        <activity
            android:name=".PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ManageVehiclesActivity"
            android:exported="false" /> <!-- Déclaration de l'activité de sélection (écran d'accueil) -->
        <activity
            android:name=".SelectionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Déclaration de l'activité principale -->
        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- Déclaration de l'activité IdentificationActivity -->
        <activity
            android:name=".IdentificationActivity"
            android:exported="true" /> <!-- Déclaration de l'activité AddVehicleActivity -->
        <activity
            android:name=".AddVehicleActivity"
            android:exported="true" />
        <activity
            android:name=".ReservationActivity"
            android:exported="true" />
    </application>

</manifest>